.banner_body,.banner_item,.banner_item image{
    width: 100%;
    height: 450rpx;
}
.notice{
    display: flex;
    align-items: center;
    background-color: #ffffff;
    padding: 5rpx 15rpx;
    margin-top: 20rpx;

}
.notice image{
    width: 60rpx;
    height: 60rpx;
}
.notice text{
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-left: 30rpx;

}
.container{
    margin: 50rpx;
    display: flex;
    flex-wrap: wrap;
}
.container .body{
    width: 260rpx;
    height: 260rpx;
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
    margin: 60rpx;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: auto;
    border-radius: 20rpx;
}
.container .body .circleBorder{
    width: 140rpx;
    height: 140rpx;
    position: absolute;
    top: -30rpx;
    border-radius: 50%;
    background-color: #ffffff;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 0 8rpx 8rpx #f3f3f3;

}
.container .body .circleBorder .icon{
    width: 130rpx;
    height: 130rpx;
    background-color:#ffffff;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 5rpx;
    border-radius: 50%;
}

.container .body .circleBorder .icon image{
    width: 60rpx;
    height: 60rpx;
}
.container .body .text{
    margin-top: 85rpx;
    color: #000000;
}