<view class="container">
<view class="body" wx:for="{{indexConfig}}" wx:key="index" data-url="{{ item.url }}" bindtap="toDetail" >
<view class="circleBorder">
<view class="icon">
<image src="{{item.icon}}">
</image>
</view>
</view>

<text class="text">{{item.text}}</text>
</view>
</view>