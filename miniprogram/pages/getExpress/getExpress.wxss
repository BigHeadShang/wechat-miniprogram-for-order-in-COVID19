}

.container .getCode {
    margin-top: 20rpx;
    display: flex;
    justify-content: center;
    position: relative;
}

.container .getCode .content {
    border: 2rpx solid #d1d1d1;
    padding: 20rpx;
    width: 83%;
}

.container .getCode .getImg {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    bottom: 60rpx;
    right: 80rpx;
}

.container .bottom_tips {
    display: flex;
    flex-direction: column;
    text-align: center;
}

.container .bottom_tips text {
    margin-top: 20rpx;
}

.container .bottom_tips text:nth-child(1) {
    color: #a1a1a1;
}

.container .bottom_tips text:nth-child(3) {
    color: #f00;
}

.container .submit {
    width: 90%;
    background-color: darkgoldenrod;
    color: #fff;
    border-radius: 40rpx;
    padding: 20rpx 0;
    margin-top: 25rpx;
}

.container .statement {
    color: darkgoldenrod;
